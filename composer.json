{
    "name": "liturgical-calendar/components",
    "description": "Reusable frontend components for the Liturgical Calendar API",
    "type": "library",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "LiturgicalCalendar\\Components\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LiturgicalCalendar\\Components\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "John R. D'Orazio",
            "email": "priest@johnromanodorazio.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ext-intl": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.6",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^3.0",
        "psr/cache": "^3.0",
        "psr/simple-cache": "^3.0",
        "nyholm/psr7": "^1.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "^7.0 - PSR-18 HTTP client implementation (recommended)",
        "monolog/monolog": "^3.0 - PSR-3 logging implementation (recommended)",
        "symfony/cache": "^6.0 || ^7.0 - PSR-6/PSR-16 caching implementation (recommended)",
        "php-http/discovery": "^1.0 - Automatic PSR implementation discovery"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3@stable",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.0@stable",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "captainhook/captainhook-phar": "^5.25",
        "captainhook/hook-installer": "^1.0",
        "monolog/monolog": "^3.0",
        "symfony/cache": "^6.0 || ^7.0"
    },
    "scripts": {
        "post-install-cmd": [
            "LiturgicalCalendar\\Components\\CalendarSelect::postInstall"
        ],
        "post-update-cmd": [
            "LiturgicalCalendar\\Components\\CalendarSelect::postInstall"
        ],
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "analyse": "phpstan analyse",
        "parallel-lint": "parallel-lint --exclude .git --exclude vendor .",
        "test": "phpunit --testdox --display-warnings",
        "test:quick": "phpunit --testdox --display-warnings --exclude-group slow",
        "test-filter": "phpunit --testdox --display-warnings --filter"
    },
    "config": {
        "allow-plugins": {
            "captainhook/hook-installer": true,
            "captainhook/captainhook-phar": true
        }
    }
}
